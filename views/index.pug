html
    head
        title Tweets
        style
            include style.css
    body
        each t in tweets
            div(class=t.read ? "tweet read" : "tweet")
                img(class="avatar", src=t.au, alt=t.name) 
                div.byline 
                    span.name 
                        =t.name
                    span.handle @#{t.sn}
                div.timestamp
                    =t.ts
                div.text
                    =t.t
                ul.links
                    each l in t.urls
                        li.link
                            a(href=l) 
                                =l
